datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tasks {
  id                          Int    @id() @default(autoincrement())
  parentId                    String?
  taskName                    String
  startDate                   DateTime
  endDate                     DateTime
  duration                    Float? @default(0.0)
  notes                       String?  
  progress                    Float? @default(0.0)
  predecessor                 String?
  taskResources           TaskResourceAssignment[]
  
  @@index([parentId], name: "parentId")  
}

model TaskResource {
  id           Int     @id() @default(autoincrement())
  resourceName String
  resourceRole String?
  taskAssignments TaskResourceAssignment[]
}

model TaskResourceAssignment {
  taskId Int
  task   Tasks @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskResourceId Int
  taskResource TaskResource @relation(fields: [taskResourceId], references: [id], onDelete: Cascade)

  @@id([taskId, taskResourceId])
}